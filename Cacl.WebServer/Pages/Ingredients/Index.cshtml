@page
@model CaclApi.Pages.Ingredients.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<link rel="stylesheet" href="~/css/StyleSheet.css" type="text/css" />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Ингредиенты</h2>
    </div>
    <div class="col-3">
        <a asp-page="create" class="btn btn-info form-control text-white">Добавить блюдо</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Ingredients.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label>Продукт</label>
                        </th>
                        <th>
                            <label>Вес продукта</label>
                        </th>
                        <th>
                            <label>Описание</label>
                        </th>
                    </tr>
                    @foreach (var ingredient in Model.Ingredients)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => ingredient.Product.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => ingredient.ProductQuantity)
                            </td>
                            <td>
                                @Html.DisplayFor(m => ingredient.Description)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@ingredient.Id" class="btn btn-danger btn-sm">Удалить</button>
                                <a asp-page="Edit" asp-route-id="@ingredient.Id" class="btn btn-success btn-sm text-white">Редактировать</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>Нет ингредиентов</p>
            }
        </form>
    </div>
</div>